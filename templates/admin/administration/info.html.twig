{% extends "admin/base.html.twig" %}


{% block body %}

<div class="container">

   <div class="row">
      <div class="col-md-8">
      <h1 class="text-center my-5">Informations :</h1>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Status</th>
              <th>Description</th>
              <th>Image</th>
              <th>
                     <a href="{{path('staff.create')}}" class="badge badge-pill badge-success"><i class="fas fa-plus"></i></a>
              </th>
            </tr>
          </thead>
          <tbody>
           {% if staff %}
           {% for s in staff %}
            <tr>
              <td>{{s.name}}</td>
              <td>{{s.statu}}</td>
              <td>{{s.description}}</td>
              <td>
               {% if s.imageName %}
                 <img src="/upload_images/staff/{{s.imageName}}" style="width:50px; height: 50px">
                 {% else %}
                   Pas d'image
               {% endif %}
              </td>
              <td>
               <div class="row">
                  <div class="col-6">
                     <a href="{{path('staff.update' , {'name' : s.name})}}" class="badge badge-pill badge-info"><i class="fas fa-pen"></i></a>
                  </div>
                  <div class="col-6">
                     <a href="{{path('staff.delete', {'id' : s.id })}}" class="badge badge-pill badge-danger"><i class="fas fa-trash"></i></a>
                  </div>
                </div>
              </td>
            </tr>
           {% endfor %}
           {% else %}
             <tr>
               <td>
                  <h2>Vous n'avez pas enregistrer de menbre pour l'instant</h2>
               </td>
             </tr>
           {% endif %}
           </tbody>
        </table>
        </div>
      </div>
    <div class="col-md-4">
    <h1 class="text-center my-5">Les horaires</h1>
       <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Jour</th>
              <th>Horaire</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
           {% for day in days %}
            <tr>
              <td>{{day.dayName}}</td>
              <td>{{day.openHours.open}}h-{{day.openHours.closed}}h</td>
              <td><a href="{{path('day.update', {'id' : day.id})}}" class="badge badge-pill badge-info"><i class="fas fa-pen"></i></a></td>
            </tr>
           {% endfor %}
           </tbody>
        </table>
    </div>
   </div>

</div>

{% endblock %}