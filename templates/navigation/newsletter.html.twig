{% extends "base.html.twig" %}

{% block body %}

<div class="container d-flex justify-content-center">
      <div class="newsletter-body p-3 my-5 shadow bg-white rounded">
         <h1>Newsletter</h1>
         {{form_start(form)}}
           <div class="row">
            <div class="col-md-6 p-2">
              <div class="row">
                <div class="col-3">{{form_label(form.firstname)}}</div>
                <div class="col-9">{{form_widget(form.firstname)}}</div>
              </div>
            </div>
            <div class="col-md-6 p-2">
              <div class="row">
                <div class="col-3">{{form_label(form.lastname)}}</div>
                <div class="col-9">{{form_widget(form.lastname)}}</div>
              </div>
            </div>
           </div>
           <div class="form-groupe p-2">
             {{form_row(form.email)}}
           </div>
            {{form_widget(form)}}
           <div class="form-groupe">
              <button class="btn btn-primary">S'inscrire</button>
           </div>
         {{form_end(form)}}
      </div>
</div>

{% endblock %}